<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Inclua os arquivos CSS e JavaScript do Bootstrap com caminhos locais ou CDN -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark justi   tent-between">
        <div class="container">
            <a class="navbar-brand text-light" href="/">Deslogar</a>
            <form class="form-inline ml-auto" action="/login" method="GET">
            </form>
        </div>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="row">
            <!-- Seção de Usuários -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3>Usuários</h3>
                            <a href="/cadastro_usuario" class="btn btn-success">Cadastrar</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Nível</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(function(user) { %>
                                    <tr>
                                        <td style="width: 400px;"><%= user.author_name %></td>
                                        <td style="width: 200px;"><%= user.author_email %></td>
                                        <td style="width: 50px;"><%= user.author_level %></td>
                                        <td>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <form action="/edita_usuario" method="POST">
                                                    <input type="hidden" name="id" value="<%= user.author_id %>">
                                                    <button type="submit" class="btn btn-primary btn-sm">Editar</button>
                                                </form> 
                                                <button class="btn btn-danger btn-sm" style="margin-left: 5px;">Deletar</button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <!-- Seção de Artigos -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3>Artigos</h3>
                            <a href="/cadastra_artigo" class="btn btn-success">Cadastrar</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Titulo</th>
                                    <th>Email Autor</th>
                                    <th>Publicado</th>
                                    <th>Curtidas</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% articles.forEach(function(article) { %>
                                    <tr>
                                        <td style="width: 200px;"><%= article.kb_title %></td>
                                        <td style="width: 150px;"><%= article.kb_author_email %></td>
                                        <td style="width: 150px;"><%= article.kb_published_date %></td>
                                        <td style="width: 50px;"><%= article.kb_liked_count %></td>
                                        <td>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <a href="/edita_artigo" class="btn btn-primary btn-sm">Editar</a>
                                                <button class="btn btn-danger btn-sm" style="margin-left: 5px;">Deletar</button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
