<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Artigos</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark justi   tent-between">
        <div class="container">
            <a class="navbar-brand text-light" href="/">Home</a>
            <form class="form-inline ml-auto" action="/filter" method="GET">
                <div class="row justify-content-between">
                    <div class="form-group col-md-8">
                    <input type="text" class="form-control" name="keyword" placeholder="Digite a palavra-chave">
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Filtrar</button>
                    </div>
                </div>
            </form> 
            <form class="form-inline ml-auto" action="/login" method="GET">
                <form action="/login" method="POST">
                    <button type="submit" class="btn btn-primary text-light ml-auto">Logar</button>
                </form>
                <a href="/cadastra_usuario" class="btn btn-primary">Cadastrar Usuário</a>
            </form>
        </div>
        </div>
    </nav>

    <div class="container mt-5 text-center" style="min-height: 81vh;" id="principais">
        <% articles.forEach(function(obj) { %>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row justify-content-between">
                                <div class="col-md-4" style="height: 50px;">
                                    <img style="height: 230%;" src=<%= obj.imagem %> class="card-img-top" alt="Imagem do Artigo">
                                </div>
                                <div class="col-md-8">
                                    <h2 class="card-title"><%= obj.kb_title %></h2>
                                    <div style="-ms-flex-align: start;">
                                        <div class="ml-4"><%= obj.kb_author_email %> <%= obj.kb_published_date %></div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                        </div>
                                        <div>
                                            <span class="badge text-bg-danger" id="likes">
                                                <i class="bi bi-heart"></i>Curtidas: <%= obj.kb_liked_count %>
                                            </span>
                                            <a href="#" class="btn btn-outline-primary btn-sm ml-2">Leia mais</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
       

    <footer class="bg-dark text-light text-center py-3">
        <div class="container">
            &copy; Base de Conhecimento 2023
        </div>
    </footer>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>