<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Artigos</title>
    <!-- <link rel="stylesheet" href="/../node_modules/bootstrap/dist/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-between">
        <div class="container">
            <a class="navbar-brand text-light" href="#">Home</a>
                <a href="#" class="btn btn-primary text-light ml-auto">Logar</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5 text-center" id="principais">
        <% articles.forEach(function(obj) { %>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="<%= obj.imagem %>" class="card-img-top" alt="Imagem do Artigo">
                                </div>
                                <div class="col-md-8">
                                    <h2 class="card-title"><%= obj.kb_title %></h2>
                                    <div style="-ms-flex-align: center;">
                                        <div class="ml-4">Palavras-chave: <%= obj.kb_keywords %></div>
                                        <div class="ml-4">Email do Autor: <%= obj.kb_author_email %></div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="badge text-bg-danger" id="likes">
                                                <i class="bi bi-heart"></i>Curtidas: <%= obj.kb_liked_count %>
                                            </span>
                                            <a href="#" class="btn btn-outline-primary btn-sm ml-2">Leia mais</a>
                                        </div>
                                        <div>
                                            <span>Publicação: <%= obj.kb_published_date %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
       

    <footer class="bg-dark text-light text-center py-3">
        <div class="container">
            &copy; 2023 Meu Site
        </div>
    </footer>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>